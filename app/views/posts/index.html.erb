<p style="color: green"><%= notice %></p>

<h1>Posts</h1>
<% if user_signed_in? %>
  <%= link_to "logout", destroy_user_session_path, method: :delete, turbo_method: :delete %>
<% else %>
  <%= link_to "login", new_user_session_path %>
<% end %>
<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>


